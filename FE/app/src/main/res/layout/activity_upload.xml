<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- 운동명 (읽기 전용) -->
        <TextView
            android:id="@+id/tvUploadSportLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_sport"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            android:paddingBottom="4dp"/>

        <!-- etSport 로 id 변경 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSport"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/hint_sport"
                android:enabled="false"
                android:padding="12dp"
                android:textColor="?attr/colorOnBackground"
                android:textColorHint="?attr/colorOnBackground"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 날짜 선택 -->
        <TextView
            android:id="@+id/tvUploadDateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_date"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            android:paddingBottom="4dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUploadDate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/hint_date"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:textColor="?attr/colorOnBackground"
                android:textColorHint="?attr/colorOnBackground"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 동영상 URL 입력 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUploadUrl"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_url"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUrl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textUri"
                android:padding="12dp"
                android:textColor="?attr/colorOnBackground"
                android:textColorHint="?attr/colorOnBackground" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 피드백 입력 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUploadFeedback"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_feedback"
            android:layout_marginBottom="24dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFeedback"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:padding="12dp"
                android:textColor="?attr/colorOnBackground"
                android:textColorHint="?attr/colorOnBackground" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 업로드 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpload"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_upload"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
